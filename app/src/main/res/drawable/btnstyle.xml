<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#8D98FA" /> <!-- Replace with your pressed color -->
            <corners android:radius="18dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/buttonColor" /> <!-- Default button color -->
            <corners android:radius="18dp" />
        </shape>
    </item>

</selector>