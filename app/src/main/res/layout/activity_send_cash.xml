<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SendCashActivity"
    android:padding="20dp"
    android:background="@color/background_color">

    <AutoCompleteTextView
        android:id="@+id/receiver"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/transaction_history_btn"
        android:ems="10"
        android:hint="Recipient's Username"
        android:inputType="text"
        android:maxLength="16"
        android:paddingStart="30dp"
        android:textAlignment="textStart"
        android:textColor="@color/text_color_dark"
        android:textColorHint="#4D333333"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/addInput"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/amount_view"
        android:ems="10"
        android:hint="00.00"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingRight="40dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textColorHint="#4DFFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receiver" />

    <GridLayout
        android:id="@+id/gridLayout2"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="40dp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addInput">


        <Button
            android:id="@+id/add10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/numpad"
            android:fontFamily="@font/poppins_semibold"
            android:minWidth="150dp"
            android:minHeight="100dp"
            android:text="10"
            android:textColor="@color/buttonColor"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="281dp" />

        <Button
            android:id="@+id/add20"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="10dp"
            android:background="@drawable/numpad"
            android:fontFamily="@font/poppins_semibold"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:text="20"
            android:textColor="@color/buttonColor"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="281dp" />

        <Button
            android:id="@+id/add50"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/numpad"
            android:fontFamily="@font/poppins_semibold"
            android:minWidth="150dp"
            android:minHeight="100dp"
            android:text="50"
            android:textColor="@color/buttonColor"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="283dp"
            tools:layout_editor_absoluteY="281dp" />

        <Button
            android:id="@+id/add100"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/numpad"
            android:fontFamily="@font/poppins_semibold"
            android:minWidth="150dp"
            android:minHeight="100dp"
            android:text="100"
            android:textColor="@color/buttonColor"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="341dp" />

        <Button
            android:id="@+id/add200"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginBottom="10dp"
            android:background="@drawable/numpad"
            android:fontFamily="@font/poppins_semibold"
            android:minWidth="150dp"
            android:minHeight="100dp"
            android:text="200"
            android:textColor="@color/buttonColor"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="341dp" />

        <Button
            android:id="@+id/add500"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/numpad"
            android:fontFamily="@font/poppins_semibold"
            android:minWidth="150dp"
            android:minHeight="100dp"
            android:text="500"
            android:textColor="@color/buttonColor"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="283dp"
            tools:layout_editor_absoluteY="341dp" />

        <Button
            android:id="@+id/add1000"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginRight="10dp"
            android:background="@drawable/numpad"
            android:fontFamily="@font/poppins_semibold"
            android:minWidth="150dp"
            android:minHeight="100dp"
            android:text="1,000"
            android:textColor="@color/buttonColor"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="410dp" />

        <Button
            android:id="@+id/add5000"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="@drawable/numpad"
            android:fontFamily="@font/poppins_semibold"
            android:minWidth="150dp"
            android:minHeight="100dp"
            android:text="5,000"
            android:textColor="@color/buttonColor"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="410dp" />

        <Button
            android:id="@+id/add10000"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginStart="10dp"
            android:background="@drawable/numpad"
            android:fontFamily="@font/poppins_semibold"
            android:minWidth="150dp"
            android:minHeight="100dp"
            android:text="10,000"
            android:textColor="@color/buttonColor"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="283dp"
            tools:layout_editor_absoluteY="410dp" />

    </GridLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18sp"
        android:paddingTop="7dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btnstyle"
        android:fontFamily="@font/poppins_semibold"
        android:text="Send Money"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout2"
        app:layout_constraintVertical_bias="0.0"  />





</androidx.constraintlayout.widget.ConstraintLayout>